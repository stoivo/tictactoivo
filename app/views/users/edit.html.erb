<h1><%= @user.username %> change what you can fast and awsome!!</h1>

<%= form_for @user, html: { class: "form-horizontal", role: "form" } do |form| %>

  <% if @user.errors.any? %>
    <div class="row error_messages">
      <div class="col-sm-offset-2 col-sm-8">
        <div class="alert alert-dismissable alert-danger">
          <button type="button" class="close" data-dismiss="alert">Ã—</button>
          <strong><%= @user.errors.full_messages.join("<br />").html_safe %></strong>
        </div>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :username, class: "control-label col-sm-3" %>
    <div class="col-sm-7">
      <%= form.text_field :username, class: "form-control" %>
      <!-- <input type="text" class="form-control" id="inputSuccess3" aria-describedby="inputSuccess3Status"> -->
      <!-- <span class="sr-only">(success)</span> -->
    </div>
  </div>
  <div class="form-group">
    <%= form.label :epost, class: "control-label col-sm-3" %>
    <div class="col-sm-7">
      <%= form.text_field :epost, class: "form-control" %>
      <!-- <input type="text" class="form-control" id="inputSuccess3" aria-describedby="inputSuccess3Status"> -->
      <!-- <span class="sr-only">(success)</span> -->
    </div>
  </div>
  <div class="form-group">
    <%= form.label :admin, class: "control-label col-sm-3" %>
    <div class="col-sm-7">
      <%= form.check_box :admin, class: "form-control" %>
      <!-- <input type="text" class="form-control" id="inputSuccess3" aria-describedby="inputSuccess3Status"> -->
      <!-- <span class="sr-only">(success)</span> -->
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-7">
      <%= form.submit "Join us",  class: "btn btn-success"%>
    </div>
  </div>

<% end %>
