<h1><%= @user.username %> Now, reset you password</h1>
<%= form_for @user, url: user_update_only_password_path(params[:user_id]), html: { class: "form-horizontal", role: "form" } do |f| %>
  <% if @user.errors.any? %>
    <div class="row error_messages">
      <div class="col-sm-offset-2 col-sm-8">
        <div class="alert alert-dismissable alert-danger">
          <button type="button" class="close" data-dismiss="alert">Ã—</button>
          <strong><%= @user.errors.full_messages.join("<br />").html_safe %></strong>
        </div>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :password, class: "control-label col-sm-3" %>
    <div class="col-sm-7">
      <%= f.password_field :password, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :password_confirmation, class: "control-label col-sm-3" %>
    <div class="col-sm-7">
      <%= f.password_field :password_confirmation, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-7">
      <%= f.submit "Update Password",  class: "btn btn-success"%>
    </div>
  </div>
<% end %>
